# NPM 보안 설정

# 1. 정확한 버전 고정 (자동 업데이트 방지)
save-exact=true

# 2. 라이프사이클 스크립트 실행 비활성화 (악성 코드 방지)
ignore-scripts=true

# 3. package-lock.json 자동 생성
package-lock=true

# 4. 패키지 출처 검증 활성화
audit=true

# 5. 패키지 설치 시 보안 감사 실행
audit-level=moderate

# 6. 레지스트리 설정
registry=https://registry.npmjs.org/

# 7. 엄격한 SSL 검증
strict-ssl=true
